- if !notice.nil?
    .alert.alert-success
      center
        h4
          = notice
br
center
  h1 Listado de Clientes
br
br

table.table.table-bordered
  tr
    th 
      |Nombre
    th 
      |Descripcion
    th 
      |Imagen
    th

  - @clients.each do |client|
    tr
      td
        = client.name
      td
        = client.description
      - @image = ("<img class='content' src='"+client.image+"' height='100' width='100'>").html_safe
      td 
        = @image
      - edit_id = "edit_"+client.id.to_s
      td
        a.btn.btn-info href=edit_client_path(client) id=edit_id
          i.icon-pencil.icon-white
          |  Editar
      - delete_id = "delete_"+client.id.to_s
      td
        a.btn.btn-danger href=client_path(client.id) data-confirm="Esta seguro que desea eliminar este cliente?" data-method="delete" rel="nofollow" id=delete_id
          i.icon-trash.icon-white
          |  Eliminar
br
a.btn.btn-primary href=new_user_path(2)
  i.icon-plus-sign.icon-white
  |  Agregar Nuevo Cliente
